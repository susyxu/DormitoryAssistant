<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="#1976D2"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="1dp"
                android:color="#1976D2"
                />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="#00B7F3"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="1dp"
                android:color="#00B7F3"
                />
        </shape>
    </item>
</selector>